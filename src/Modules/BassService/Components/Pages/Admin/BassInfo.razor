@page "/admin/bassinfo"
@using Whitestone.SegnoSharp.Shared.Attributes
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using Whitestone.SegnoSharp.Modules.BassService.Interfaces
@using Whitestone.SegnoSharp.Modules.BassService.Models.Config
@inject IBassWrapper BassWrapper
@inject IOptions<BassRegistration> BassRegistration
@attribute [Authorize]
@attribute [ModuleMenu("BASS Info", 210, "fa-wave-square", true)]

<div class="header-container">
    <h1>BASS Information</h1>
</div>

<div class="card-grid">
    <div class="card grid-span-6">
        <div class="card-header-container">
            <h2>Registration</h2>
        </div>
        <div>
            Email: @BassRegistration.Value.Email<br />
            Key: @BassRegistration.Value.Key
        </div>
    </div>
    <div class="card grid-span-6">
        <div class="card-header-container">
            <h2>Components</h2>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Component</th>
                    <th>Version</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>BASS</td>
                    <td>@BassWrapper.GetBassVersion()</td>
                </tr>
                <tr>
                    <td>BASS Enc</td>
                    <td>@BassWrapper.GetBassEncVersion()</td>
                </tr>
                <tr>
                    <td>BASS Enc MP3</td>
                    <td>@BassWrapper.GetBassEncMp3Version()</td>
                </tr>
                <tr>
                    <td>BASS Enc AAC</td>
                    <td>@BassWrapper.GetBassEncAacVersion()</td>
                </tr>
                <tr>
                    <td>BASS Mixer</td>
                    <td>@BassWrapper.GetBassMixerVersion()</td>
                </tr>
                <tr>
                    <td>BASS.NET</td>
                    <td>@BassWrapper.GetBassNetVersion()</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>